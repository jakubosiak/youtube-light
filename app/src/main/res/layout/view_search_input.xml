<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/darkGrey"
        android:elevation="8dp"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop">

    <ImageView
            android:id="@+id/searchInputBackIMG"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:src="@drawable/ic_arrow_black"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="center"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchInputET"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/searchClearIMG"
            android:paddingStart="@dimen/searchBarMarginTopBottom"
            android:singleLine="true"
            android:paddingEnd="0dp"
            android:layout_marginTop="@dimen/searchBarMarginTopBottom"
            android:layout_marginBottom="@dimen/searchBarMarginTopBottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorAccent"
            android:text="adaksodaspdkasadaksodaspdkasadaksodaspdkas"
            android:background="@drawable/shape_rectangle_blackish_rounded_left"
            app:layout_constraintStart_toEndOf="@id/searchInputBackIMG"
            android:layout_width="0dp"
            android:layout_height="36dp"/>

    <ImageView
            android:id="@+id/searchClearIMG"
            android:background="@drawable/shape_ripple_close_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_close"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>